////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  GCP Credentials
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "gcp" {
    type            = map
    description     = "The gcp provider information"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  SSH Credentials
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "ssh" {
    type            = map
    description     = "SSH Configuration Variables"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Global Project Information
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "info" {
    type            = map
    description     = "Global Project Information"
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Image Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "image" {
    type            = map
    description     = "Image Configuration Variables"
    default         = {
        server      = "framework-server-0-1-0"
        docker      = "framework-docker-0-1-0"
        podman      = "framework-podman-0-1-0"
        windows     = "framework-windows-0-1-0"
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Server Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "server" {
    type            = map
    description     = "Server Configuration Variables"
    default         = {
        name        = "server"
        type        = "n1-standard-2"
        volume_size = 20
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Docker Client Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "docker" {
    type            = map
    description     = "Docker Client Configuration Variables"
    default         = {
        name        = "docker"
        type        = "n1-standard-2"
        volume_size = 20
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Podman Client Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "podman" {
    type            = map
    description     = "Podman Client Configuration Variables"
    default         = {
        name        = "podman"
        type        = "n1-standard-2"
        volume_size = 30
    }
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  Windows Client Configuration
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
variable "windows" {
    type            = map
    description     = "Windows Client Configuration Variables"
    default         = {
        name        = "windows"
        type        = "n1-standard-4"
        volume_size = 100
    }
}